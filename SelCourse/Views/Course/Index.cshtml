@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>课程管理</title>
    @*<link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">*@  
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/bootstrapcdn.css" rel="stylesheet" />
    @*<script src="http://cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>*@  
    <script src="~/scripts/jquerycdn.js"></script>
    <script src="~/scripts/bootstrapcdn.js"></script>
    <script src="~/js/global.js"></script>
    <script src="~/js/course.js"></script>
</head>
<body>
    <div style="margin-bottom:10px;"></div>
    <div align="center">
        <select name="DropDownList1" id="courseTypeSelect" style="height:27px;">
            @{
                foreach (GeneralSelectItem type in ViewBag.CourseTypes)
                {
                    if (ViewBag.CurrentType == type.Value)
                    {
                        <option value="@type.Value" selected="selected">@type.Text</option>
                    }
                    else
                    {
                        <option value="@type.Value">@type.Text</option>
                    }
                }
            }

        </select>
        @*<button class="btn btn-primary " id="add" data-toggle="modal" data-target="#myModal">*@
        <button class="btn btn-primary " id="add">新增</button>&nbsp;&nbsp;&nbsp;&nbsp; 
        <button type="button" class="btn btn-info" id="goout">退出</button>
    </div>
    <div>
        <table class="table">
            <tr class="sysBgColor">
                <th>课程名称</th>
                <th>课程类型</th>
                <th>课程描述</th>
                <th>课程人数</th>
                <th>可选人数</th>
                <th>操作</th>
            </tr>
            @{
                foreach (Course stu in ViewBag.Courses)
                {
                    <tr>
                        <td style="display:none">@stu.CourseId</td>
                        <td>@stu.CourseName</td>
                        <td>@stu.CourseType</td>
                        <td>@stu.CourseRemark</td>
                        <td>@stu.CourseTotal</td>
                        <td>@stu.CourseSel</td>
                        <td>
                            <img src="img/backgrounds/delete.png" class="delete" cid="@stu.CourseId" />&nbsp;
                            <img src="img/backgrounds/update.png" class="update" cname="@stu.CourseName" cdes="@stu.CourseRemark" ctotal="@stu.CourseTotal" ctype="@stu.CourseType" cid="@stu.CourseId" />&nbsp;
                            <img class="showstudent" cid="@stu.CourseId" src="img/backgrounds/man.png" />&nbsp;
                            <img src="img/backgrounds/ok.png" />&nbsp;
                        </td>
                    </tr>
                }
            }
        </table>
        <br />
        <div align="center">
                <ul class="pagination">
                    <li><a href="#">&laquo;</a></li>
                    @{
                        foreach (var page in ViewBag.Pages)
                        {
                            <li ><a href="#" class="page" psize="@ViewBag.PageSize" pid="@page">@page</a></li>
                        }
                    }
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">课程管理</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group" style="display:none;">
                            <label for="recipient-id" class="control-label">课程ID:</label>
                            <input type="text" class="form-control" id="course-id">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="control-label">课程名称:</label>
                            <input type="text" class="form-control" id="course-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-type" class="control-label">课程类型:</label>
                            <input type="text" class="form-control" id="course-type">
                         </div>
                        <div class="form-group">
                            <label for="message-remark" class="control-label">课程描述:</label>
                            <textarea class="form-control" id="course-remark"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="recipient-num" class="control-label">课程人数:</label>
                            <input type="text" class="form-control" id="course-num">
                        </div>
                    </form> 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="save" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>  

</body>
</html>
